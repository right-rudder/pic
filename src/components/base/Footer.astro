---
import Logo from "./Logo.astro";
import { menuLeft, menuRight } from "./Navbar.astro";
import { ADDRESS, COMPANY_NAME, PHONE_NUMBER, SITE_DESCRIPTION } from "../../data/consts";

const today = new Date();
---

<footer class="pt-8 pr-8 pb-24 pl-8 bg-gray-100 text-amber-900 ">
  <div class="relative z-10 pt-24 mx-auto border-b border-gray-500 sm:max-w-xl md:max-w-full lg:max-w-screen-xl">
    
      <!-- Column 1: Logo + Tagline + Social -->
      <div class="flex flex-col items-center lg:flex-1">
        <a href="/" class="flex items-center justify-center mb-4 w-full md:1/2 max-w-36 lg:w-full h-auto">
          <Logo />
        </a>

        <p class="text-sm text-center mb-4 font-medium">
          {SITE_DESCRIPTION}
        </p>

        <!-- Social icons -->
        <div class="flex items-start align-middle gap-4 text-accent-500 pb-12">
          <a href="https://www.instagram.com/flysolidground/" target="_blank" class="hover:text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="M12.001 9a3 3 0 1 0 0 6a3 3 0 0 0 0-6m0-2a5 5 0 1 1 0 10a5 5 0 0 1 0-10m6.5-.25a1.25 1.25 0 0 1-2.5 0a1.25 1.25 0 0 1 2.5 0M12.001 4c-2.474 0-2.878.007-4.029.058c-.784.037-1.31.142-1.798.332a2.9 2.9 0 0 0-1.08.703a2.9 2.9 0 0 0-.704 1.08c-.19.49-.295 1.015-.331 1.798C4.007 9.075 4 9.461 4 12c0 2.475.007 2.878.058 4.029c.037.783.142 1.31.331 1.797c.17.435.37.748.702 1.08c.337.336.65.537 1.08.703c.494.191 1.02.297 1.8.333C9.075 19.994 9.461 20 12 20c2.475 0 2.878-.007 4.029-.058c.782-.037 1.308-.142 1.797-.331a2.9 2.9 0 0 0 1.08-.703c.337-.336.538-.649.704-1.08c.19-.492.296-1.018.332-1.8c.052-1.103.058-1.49.058-4.028c0-2.474-.007-2.878-.058-4.029c-.037-.782-.143-1.31-.332-1.798a2.9 2.9 0 0 0-.703-1.08a2.9 2.9 0 0 0-1.08-.704c-.49-.19-1.016-.295-1.798-.331C14.926 4.006 14.54 4 12 4m0-2c2.717 0 3.056.01 4.123.06c1.064.05 1.79.217 2.427.465c.66.254 1.216.598 1.772 1.153a4.9 4.9 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428c.047 1.066.06 1.405.06 4.122s-.01 3.056-.06 4.122s-.218 1.79-.465 2.428a4.9 4.9 0 0 1-1.153 1.772a4.9 4.9 0 0 1-1.772 1.153c-.637.247-1.363.415-2.427.465c-1.067.047-1.406.06-4.123.06s-3.056-.01-4.123-.06c-1.064-.05-1.789-.218-2.427-.465a4.9 4.9 0 0 1-1.772-1.153a4.9 4.9 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.012 15.056 2 14.717 2 12s.01-3.056.06-4.122s.217-1.79.465-2.428a4.9 4.9 0 0 1 1.153-1.772A4.9 4.9 0 0 1 5.45 2.525c.637-.248 1.362-.415 2.427-.465C8.945 2.013 9.284 2 12.001 2"
              ></path>
            </svg>
          </a>
          <a href="https://www.facebook.com/flysolidground/" target="_blank" class="hover:text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    <div class="flex flex-col gap-10 justify-between pb-10  lg:pb-16 lg:gap-20 xl:flex-row">

      <!-- Column 2–4: Links + Location -->
      <div
        class="w-full flex flex-col justify-center gap-10 text-center md:gap-6 md:flex-row md:justify-around lg:gap-10 lg:flex-1"
      >
        {
          menuLeft.map((item) => (
            <div class="min-w-40">
              <a class="font-bold text-lg" href={item.url}>
                {item.label}
              </a>
              <ul class="mt-2 space-y-2">
                {item.children &&
                  item.children.map((item) => (
                    <li>
                      <a href={item.url} class="hover:!underline">
                        {item.label}
                      </a>
                    </li>
                  ))}
              </ul>
            </div>
          ))
        }


        <div class="mb-4 flex flex-col gap-2 min-w-40 text-center">
          <p class="font-bold text-lg">Location</p>
          <a
            href="https://maps.app.goo.gl/nPekCy86xjLE9bYc9"
            target="_blank"
            class="mt-1 flex flex-col items-center text-sm text-center gap-2 font-semibold whitespace-nowrap justify-center md:justify-normal hover:!underline"
            set:html={ADDRESS.split(", ").join("<br>")}
            >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M12 11.5A2.5 2.5 0 0 1 9.5 9A2.5 2.5 0 0 1 12 6.5A2.5 2.5 0 0 1 14.5 9a2.5 2.5 0 0 1-2.5 2.5M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7"
              ></path></svg
            >
          </a>
          <a
            href="tel:2402443593"
            class="mt-1 flex items-center text-sm gap-2 font-semibold justify-center md:justify-normal hover:!underline"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M6.62 10.79c1.44 2.83 3.76 5.15 6.59 6.59l2.2-2.2c.28-.28.67-.36 1.02-.25c1.12.37 2.32.57 3.57.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1A17 17 0 0 1 3 4a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.25.2 2.45.57 3.57c.11.35.03.74-.25 1.02z"
              ></path></svg
            > {PHONE_NUMBER}
          </a>
        </div>
      </div>
    </div>

    <div class="w-full mb-6">
      <span class="inline-block w-full text-center">
        Powered by
        <a href="https://rightruddermarketing.com/" target="_blank" class="font-medium hover:!underline">
          More Right Rudder
        </a>
      </span>
    </div>
  </div>

  <div class="relative z-10 flex flex-col items-center gap-2 py-6 text-sm text-center">
    <p>
      &copy; Copyright {today.getFullYear()} • {COMPANY_NAME} • All rights reserved.
    </p>
    <p>
      <a href="/privacy-policy" class="transition-colors duration-200 hover:!underline">Privacy Policy</a>
      •
      <a href="/terms-of-service" class="transition-colors duration-200 hover:!underline">Terms of Service</a>
    </p>
  </div>
</footer>
