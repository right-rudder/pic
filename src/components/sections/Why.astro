---
import ImageComp from "../utils/ImageComp.astro";
import TextIcons from "./TextIcons.astro";

const example = [
  {
    image: {
    src: "/src/assets/stock-man-airplanes-museum.jpg",
      alt: "Flight instructor and student pilot in cockpit",
    },
    upperHeader: "WHY CHOOSE PILOT INSTRUCTIONAL CENTER",
    title: "Expert Instructors. Real-World Training. Proven Results.",
    description:
      "At Pilot Instructional Center, we combine experience, integrity, and advanced training methods to help every student succeed. Our instructors are jet-rated professionals with years of real-world flight experience who are passionate about helping you become a confident, capable pilot.",
    bullets: [
      {
        icon: "M5 9V6.8c0-.44.36-.8.8-.8h16.4c.44 0 .8.36.8.8v8.4c0 .44-.36.8-.8.8H20M2.8 9h16.4a.8.8 0 0 1 .8.8v8.4a.8.8 0 0 1-.8.8H2.8a.8.8 0 0 1-.8-.8V9.8a.8.8 0 0 1 .8-.8Zm9.2 5a1 1 0 1 1-2 0a1 1 0 0 1 2 0Z",
        title: "Experienced Instructors",
        description:
          "Train with senior instructors who bring years of flight and jet experience, ensuring you receive mentorship that goes beyond the basics.",
      },
      {
        icon: "M12 2a10 10 0 1 0 0 20a10 10 0 0 0 0-20Zm1 10h-2V6h2v6Z",
        title: "Safety & Integrity First",
        description:
          "Unlike schools that rush students or cut corners, PIC prioritizes professionalism, safety, and honesty in every stage of training.",
      },
      {
        icon: "M3 6h18v2H3V6Zm0 4h18v2H3v-2Zm0 4h12v2H3v-2Z",
        title: "Tailored Training Paths",
        description:
          "From Private Pilot to Commercial and CFI programs, our structured yet flexible approach adapts to your pace, goals, and budget.",
      },
    ],
    button: {
      text: "Explore Our Programs",
      href: "/programs",
    },
  },
  {
    image: {
    src: "/src/assets/stock-man-airplanes-museum.jpg",
      alt: "Student pilots preparing for flight at Pilot Instructional Center",
    },
    upperHeader: "WHY BECOME A PILOT",
    title: "Turn Your Passion for Flight into a Career",
    description:
      "Becoming a pilot isn’t just about flying—it’s about freedom, mastery, and opportunity. From private flying adventures to professional aviation careers, the sky is truly the limit. At Pilot Instructional Center, we’ll help you take your first steps confidently with expert guidance and real-world instruction.",
    descriptions: [
      "Experience the thrill of flight and personal growth.",
      "Gain in-demand skills that open doors worldwide.",
      "Join a community of professionals who love what they do.",
    ],
    bullets: [
      {
        icon: "M12 2a10 10 0 1 0 0 20a10 10 0 0 0 0-20Zm1 14h-2v-2h2v2Zm0-4h-2V6h2v6Z",
        title: "Career Growth & Opportunity",
        description:
          "Commercial aviation, charter operations, and corporate flying all need skilled pilots. Training now positions you for a career that’s in high demand and globally respected.",
      },
      {
        icon: "M4 6h16v2H4V6Zm0 4h16v2H4v-2Zm0 4h10v2H4v-2Z",
        title: "Freedom & Adventure",
        description:
          "Enjoy the unmatched perspective of seeing the world from above. Flying offers a lifestyle of independence, excitement, and exploration few other careers can match.",
      },
      {
        icon: "M12 4a8 8 0 1 0 0 16a8 8 0 0 0 0-16Zm1 8H8v-2h5v2Z",
        title: "Challenge & Achievement",
        description:
          "Learning to fly is one of life’s most rewarding accomplishments—an achievement that builds confidence, discipline, and problem-solving skills that last a lifetime.",
      },
    ],
    button: {
      text: "Start Your Pilot Journey",
      href: "/contact",
    },
  },
];


const { content = example } = Astro.props;
---


<section class="py-12 bg-primary-300">
  {
    content.map((item: any, index: number) => (
        index % 2 === 0 
        ? 
        (
        <div class="mx-auto flex max-w-7xl flex-col overflow-hidden md:flex-row">
            <div class=" flex-1 text-white">
                <div class="flex flex-col px-8 py-12 sm:px-12 lg:py-20">
                    <span>
                        {item.upperHeader}
                    </span>
                    <h2
                    class="text-4xl font-semibold tracking-tight text-pretty sm:text-5xl"
                    >
                    {item.title}
                    </h2>
                    <p class="mt-6 text-lg/8 text-pretty text-gray-300">
                    {item.description}
                    </p>

                    <ul class="flex flex-col lg:flex-row justify-center items-center lg:justify-between gap-12 py-12">
                        {
                            item.bullets.map((bullet: any) => (
                                <div class="hover:shadow-lg flex flex-col max-w-24">
                                    <div class="mb-4 text-white">
                                    <svg
                                        class="w-8 h-8 mx-auto"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d={bullet.icon || "M5 13l4 4L19 7"}
                                        />
                                    </svg>
                                    </div>
                                    <h3 class="font-semibold text-center mb-2 uppercase">
                                    {bullet.title}
                                    </h3>
                                    {/* <p class="text-gray-500 text-sm text-center">
                                    {bullet.description}
                                    </p> */}
                                </div>
                                ))
                        }
                    </ul>
                    
                    <div class="mt-10 flex">
                    <a href={item.button.href} class="btn-accent btn-middle">
                        {item.button.text}</a>
                    </div>
                </div>
            </div>
            <div class="w-1/3  ">
                <ImageComp
                    src={item.image.src}
                    alt={item.image.alt}
                    classes="object-cover h-full w-full rounded-tl-full rounded-bl-full"
                />
            </div>
        </div>
        <div class="max-w-7xl mx-auto ">
            <div class=" flex-1 text-white">
                <div class="flex flex-col px-8 py-12 sm:px-12 lg:py-20 text-center items-center">
                    <span>
                        {item.upperHeader}
                    </span>
                    <h2
                    class="text-4xl font-semibold tracking-tight text-pretty sm:text-5xl"
                    >
                    {item.title}
                    </h2>
                    <p class="mt-6 text-lg/8 text-pretty text-gray-300">
                    {item.description}
                    </p>
                    <ul class="flex flex-col lg:flex-row justify-center items-center lg:justify-between gap-2 py-6 ">
                        {
                            item.bullets.map((bullet: any) => (
                                <div class="hover:shadow-lg flex flex-col items-center lg:w-1/4 ">
                                    <div class="mb-4 text-white">
                                    <svg
                                        class="w-8 h-8 mx-auto"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d={bullet.icon || "M5 13l4 4L19 7"}
                                        />
                                    </svg>
                                    </div>
                                    <h3 class="font-semibold text-center mb-2 uppercase">
                                        {bullet.title}
                                    </h3>
                                    <p class="text-white/90 text-sm text-center">
                                        {bullet.description}
                                    </p>
                                </div>
                                ))
                        }
                    </ul>
                    <div class="mt-10 flex">
                        <a href={item.button.href} class="btn-accent btn-middle">
                            {item.button.text}
                        </a>
                    </div>
                </div>
            </div>
        </div> 
        )  
        : 
        (   
            // <TextIcons content={item}/>

        <div class="mx-auto flex max-w-7xl flex-col overflow-hidden md:flex-row py-12 ">
            <div class="w-1/3">
                <ImageComp
                    src={item.image.src}
                    alt={item.image.alt}
                    classes="object-cover h-full w-full rounded-tr-full rounded-br-full"
                />
            </div>
            <div class=" flex-1 text-white">
                <div class="flex flex-col px-8 py-12 sm:px-12 lg:py-20 text-right items-end">
                    <span>
                        {item.upperHeader}
                    </span>
                    <h2
                    class="text-4xl font-semibold tracking-tight text-pretty sm:text-5xl"
                    >
                    {item.title}
                    </h2>
                    <p class="mt-6 text-lg/8 text-pretty text-gray-300">
                    {item.description}
                    </p>
                    {
                        item.descriptions.map((description: any) =>(<p class="mt-2 text-base text-pretty text-gray-300">{description}</p>)) 
                    }
                    <div class="mt-10 flex">
                        <a href={item.button.href} class="btn-accent btn-middle">
                            {item.button.text}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        )
    ))
  }
  <div>

  </div>
</section>
