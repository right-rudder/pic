---
import ImageComp from "../utils/ImageComp.astro";

const headerContent = {
    upperHeader: "Now Enrolling New Students in Kansas City",
    title: "Launch Your Aviation Career with Pilot Instructional Center",
    description: "Train with experienced jet-rated instructors who prioritize safety, integrity, and personalized instruction. Whether you're starting your private pilot journey or advancing toward commercial ratings, PIC will help you take off with confidence.",
    buttons: [
        {
            title: "Get started",
            href: "#",
            style: "",
        },
        {
            title: "Learn more",
            href: "#",
            style: "",
        },
    ],
    image: {
        src: "/src/assets/stock-man-airplanes-museum.jpg",
        alt: "",
    },
};

const { content = headerContent } = Astro.props;

---
<div class="bg-amber-900">
  <div class="relative isolate px-4 sm:px-6 lg:px-8 pt-20 sm:pt-24 lg:pt-28 min-h-screen overflow-hidden">
    <!-- Background image -->
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageComp 
        src={content.image.src}
        alt={content.image.alt}
        classes="object-cover w-full h-full"
      />
      <div class="absolute inset-0 bg-amber-950/60"></div>
    </div>

    <!-- Content -->
    <div class="relative mx-auto max-w-4xl px-6 py-12 sm:py-16 lg:py-20 bg-white/10 backdrop-blur-sm rounded-3xl sm:rounded-full shadow-lg">
      
      <!-- UpperHeader  -->
      <div class="flex justify-center mb-6 sm:mb-10">
        <div class="relative rounded-full px-4 py-1.5 text-sm sm:text-base bg-white text-amber-900 ring-1 ring-amber-800/70 hover:ring-amber-900/80 transition">
          {content.upperHeader}
        </div>
      </div>

      <!-- Main text -->
      <div class="text-center">
        <h1 class="text-3xl sm:text-5xl lg:text-6xl font-semibold tracking-tight text-white leading-tight">
          {content.title}
        </h1>
        <p class="mt-6 text-base sm:text-lg lg:text-xl font-medium text-white/90 max-w-2xl mx-auto">
          {content.description}
        </p>
      </div>

      <!-- CTA -->
      <!--
      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6">
        <a href="#" class="rounded-md bg-amber-700 px-5 py-2.5 text-sm font-semibold text-white shadow hover:bg-amber-800 transition">Get started</a>
        <a href="#" class="text-sm font-semibold text-white hover:text-amber-200 transition">Learn more â†’</a>
      </div>
      -->
    </div>
  </div>
</div>

