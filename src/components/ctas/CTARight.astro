---
import ImageComp from "../utils/ImageComp.astro";

const example = {
  image: {
    src: "/src/assets/stock-man-airplanes-museum.jpg",
    alt: "Example Image",
  },
  title: "Ready to get started?",
  description:
    "Contact us today to discuss your project and discover how we can help you achieve your goals.",
  descriptions: [
    "Contact us today to discuss your project and discover how we can help you achieve your goals.",
    "Contact us today to discuss your project and discover how we can help you achieve your goals.",
    "Contact us today to discuss your project and discover how we can help you achieve your goals.",
  ],
  button: {
    text: "Contact Us",
    href: "/contact",
  },
};

const { content = example } = Astro.props;
---
<!-- CTA Right -->
<div class="relative py-12 bg-primary-300">
    <a
    href={content.button.href}
    class=" bg-stone-100 rounded-l-full text-2xl px-4 py-2 pr-[20%] lg:pr-[30%] absolute top-6 right-0 sm:right-0 sm:top-16"
    >
    {content.button.text}
    </a>
    <div class=" lg:absolute inset-0 left-0 top-12 z-10 md:w-3/4 lg:w-1/3 xl:1/3 max-h-3/4 mt-12">
        <ImageComp
        src={content.image.src}
        alt={content.image.alt}
        classes="object-cover h-full rounded-tr-full rounded-br-full w-full"
        />
    </div>
    <div class="mx-auto flex max-w-4xl flex-col overflow-hidden md:flex-row">
    <div class=" flex flex-col px-6 py-10 sm:px-10 lg:py-16 text-right items-end text-white w-full pb-20">
        <h2 class="text-3xl sm:text-4xl lg:text-6xl font-semibold tracking-tight text-pretty my-6">
        {content.title}
        </h2>

        {!content.descriptions && 
          (<p class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl text-pretty text-gray-300 lg:w-2/3">
              {content.description}
          </p>)
        }
        <div class="max-w-xl pl-12 flex flex-col justify-end items-end">
        {
          content.descriptions && ( content.descriptions.map((description:any) => (<p class="text-sm lg:text-lg  text-gray-300 ">{description}</p>)))
        }
        </div>
        <a
        href={content.button.href}
        class="btn-accent btn-middle mt-6  bottom-6 right-6 sm:right-0 sm:bottom-8"
        >
        {content.button.text}
        </a>

    </div>
    </div>

</div>
